<body>
  <div class="timer-container">
    <div class="timer" id="timer">
      <span>
        <button class="timer-button plus" onclick="adjustTime(60000)">+</button>
        <div id="minutes">10</div>
        <button class="timer-button minus" onclick="adjustTime(-60000)">-</button>
      </span>
      :
      <span>
        <button class="timer-button plus" onclick="adjustTime(1000)">+</button>
        <div id="seconds">00</div>
        <button class="timer-button minus" onclick="adjustTime(-1000)">-</button>
      </span>
      :
      <span>
        <button class="timer-button plus" onclick="adjustTime(10)">+</button>
        <div id="milliseconds">000</div>
        <button class="timer-button minus" onclick="adjustTime(-10)">-</button>
      </span>
    </div>

    <div class="controls">
      <button onclick="startTimer()" style="background: green;">Start</button>
      <button onclick="pauseTimer()" style="background: orange;">Stop</button>
      <button onclick="resetTimer()" style="background: red;">Reset</button>
    </div>

    <div class="progress">
      <div class="progress-bar" id="progress-bar"></div>
    </div>
  </div>

  <audio id="alarm-sound" src="https://www.soundjay.com/button/beep-07.wav" preload="auto"></audio>

  <script>
    let timerInterval;
    let timeRemaining = 10 * 60 * 1000; // 10 minutes in milliseconds
    const totalDuration = 10 * 60 * 1000; // Total fixed duration

    function formatTime(milliseconds) {
      const minutes = Math.floor(milliseconds / 60000);
      const seconds = Math.floor((milliseconds % 60000) / 1000);
      const millis = milliseconds % 1000;
      return { minutes, seconds, millis };
    }

    function updateTimerDisplay() {
      const { minutes, seconds, millis } = formatTime(timeRemaining);
      document.getElementById('minutes').textContent = String(minutes).padStart(2, '0');
      document.getElementById('seconds').textContent = String(seconds).padStart(2, '0');
      document.getElementById('milliseconds').textContent = String(millis).padStart(3, '0');
      const progressBar = document.getElementById('progress-bar');
      const percentage = ((totalDuration - timeRemaining) / totalDuration) * 100;
      progressBar.style.width = `${percentage}%`;
    }

    function adjustTime(amount) {
      timeRemaining = Math.max(0, timeRemaining + amount);
      updateTimerDisplay();
    }

    function startTimer() {
      if (timerInterval || timeRemaining <= 0) return;

      const startTime = Date.now();
      const endTime = startTime + timeRemaining;

      timerInterval = setInterval(() => {
        const now = Date.now();
        timeRemaining = Math.max(0, endTime - now);
        updateTimerDisplay();

        if (timeRemaining <= 0) {
          clearInterval(timerInterval);
          timerInterval = null;
          document.getElementById('alarm-sound').play();
        }
      }, 10);
    }

    function pauseTimer() {
      clearInterval(timerInterval);
      timerInterval = null;
    }

    function resetTimer() {
      pauseTimer();
      timeRemaining = totalDuration; // Reset to 10 minutes
      updateTimerDisplay();
    }

    updateTimerDisplay();
  </script>
</body>
